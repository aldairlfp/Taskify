# Example environment file for Docker
# Copy this to .env and modify as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:1234@postgres:5432/taskify_db

# Security Settings - CRITICAL: Change these in production!
# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
ENVIRONMENT=production
DEBUG=False

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
